<div class="card">
   <%# プロトタイプ画像 %>
   <%= link_to image_tag(prototype.image.attached? ? prototype.image : "default_image.png", class: "card__img"), prototype_path(prototype) %>
  <div class="card__body">
    <%# プロトタイプのタイトル%>
    <%= link_to prototype.title, prototype_path(prototype), class: "card__title" %>
    <p class="card__summary">
      <%# プロトタイプのキャッチコピー%>
      <%= prototype.catch_copy %>
    </p>
    <%# プロトタイプの投稿者名 %>
    <%= link_to "by #{prototype.user.name}", user_path(prototype.user), class: "card__user" %>
  </div>
</div>